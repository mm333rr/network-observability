{
  "uid": "sadlil-loki-apps-dashboard",
  "title": "üìã Log Browser",
  "description": "Purpose-built log browser for The Capes Homelab ‚Äî macOS, Plex, Docker, and network syslog streams",
  "tags": ["loki", "logs", "homelab", "capes"],
  "editable": true,
  "graphTooltip": 1,
  "schemaVersion": 39,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
  },
  "links": [
    {
      "icon": "bolt",
      "title": "Explore in Loki",
      "type": "link",
      "url": "/explore?orgId=1&left={\"datasource\":\"loki\",\"queries\":[{\"expr\":\"{job=\\\"${job}\\\"}\"}]}",
      "targetBlank": true,
      "includeVars": true,
      "keepTime": true
    }
  ],
  "annotations": { "list": [] },
  "templating": {
    "list": [
      {
        "name": "job",
        "label": "Log Source",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": { "label": "job", "type": 1 },
        "definition": "label_values(job)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".+",
        "multi": false,
        "sort": 1,
        "current": {}
      },
      {
        "name": "search",
        "label": "Text Filter",
        "type": "textbox",
        "current": { "selected": false, "text": "", "value": "" },
        "options": [{ "selected": true, "text": "", "value": "" }]
      },
      {
        "name": "level",
        "label": "Severity",
        "type": "custom",
        "query": "DEBUG,VERBOSE,INFO,WARNING,ERROR",
        "includeAll": true,
        "allValue": ".*",
        "multi": false,
        "current": { "text": "All", "value": "$__all" },
        "options": []
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "üìä Log Volume by Source",
      "description": "Lines/sec stacked by log source",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 18, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum by (job) (rate({host=\"macpro\", job=~\"$job\"} |= \"$search\" [$__auto]))",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 60,
            "stacking": { "mode": "normal", "group": "A" },
            "lineWidth": 0,
            "pointSize": 5,
            "showPoints": "never",
            "gradientMode": "scheme",
            "axisSoftMin": 0
          },
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["mean"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "id": 2,
      "title": "üî¥ Errors (15m)",
      "description": "Count of ERROR lines across all streams in the last 15 minutes",
      "type": "stat",
      "gridPos": { "h": 3, "w": 6, "x": 18, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({host=\"macpro\"} |~ \"(?i)error\" [15m]))",
          "legendFormat": "",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          },
          "noValue": "0"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 3,
      "title": "üì° Active Streams",
      "description": "Number of distinct log streams flowing into Loki",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 3 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count(count_over_time({host=\"macpro\"} [5m]))",
          "legendFormat": "",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null },
              { "color": "green", "value": 3 }
            ]
          },
          "unit": "short",
          "noValue": "0"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 10,
      "title": "",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 7 },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 4,
      "title": "üìú Log Viewer ‚Äî $job",
      "description": "Main log output filtered by source, text, and severity",
      "type": "logs",
      "gridPos": { "h": 22, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{host=\"macpro\", job=~\"$job\"} |= \"$search\" |~ \"(?i)$level\"",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "options": {
        "showLabels": true,
        "showTime": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "sortOrder": "Descending",
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none"
      }
    },
    {
      "id": 20,
      "title": "üîç Quick Views",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 30 },
      "collapsed": true,
      "panels": [
        {
          "id": 21,
          "title": "üê≥ Docker Container Logs",
          "type": "logs",
          "gridPos": { "h": 12, "w": 24, "x": 0, "y": 31 },
          "datasource": { "type": "loki", "uid": "loki" },
          "targets": [
            {
              "expr": "{job=\"docker\", host=\"macpro\"} |= \"$search\"",
              "legendFormat": "",
              "refId": "A"
            }
          ],
          "options": {
            "showLabels": true,
            "showTime": true,
            "wrapLogMessage": true,
            "sortOrder": "Descending",
            "enableLogDetails": true,
            "dedupStrategy": "none"
          }
        },
        {
          "id": 22,
          "title": "üé¨ Plex Errors & Warnings",
          "type": "logs",
          "gridPos": { "h": 12, "w": 24, "x": 0, "y": 43 },
          "datasource": { "type": "loki", "uid": "loki" },
          "targets": [
            {
              "expr": "{job=\"plex\", host=\"macpro\"} |~ \"(?i)(ERROR|WARNING)\"",
              "legendFormat": "",
              "refId": "A"
            }
          ],
          "options": {
            "showLabels": true,
            "showTime": true,
            "wrapLogMessage": true,
            "sortOrder": "Descending",
            "enableLogDetails": true,
            "dedupStrategy": "none"
          }
        },
        {
          "id": 23,
          "title": "üñ•Ô∏è macOS System Logs",
          "type": "logs",
          "gridPos": { "h": 12, "w": 24, "x": 0, "y": 55 },
          "datasource": { "type": "loki", "uid": "loki" },
          "targets": [
            {
              "expr": "{job=\"macos-system\", host=\"macpro\"} |= \"$search\"",
              "legendFormat": "",
              "refId": "A"
            }
          ],
          "options": {
            "showLabels": true,
            "showTime": true,
            "wrapLogMessage": true,
            "sortOrder": "Descending",
            "enableLogDetails": true,
            "dedupStrategy": "none"
          }
        }
      ]
    }
  ]
}
